{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "baseUrl": "./src",
    "paths": {
      "@soaltee-loyalty/assets/*": ["assets/*"],
      "@soaltee-loyalty/hooks/*": ["hooks/*"],
      "@soaltee-loyalty/schema/*": ["schema/*"],
      "@soaltee-loyalty/components/*": ["components/*"],
      "@soaltee-loyalty/constant/*": ["constant/*"],
      "@soaltee-loyalty/pages/*": ["pages/*"],
      "@soaltee-loyalty/providers/*": ["providers/*"],
      "@soaltee-loyalty/routes/*": ["routes/*"],
      "@soaltee-loyalty/service/*": ["service/*"],
      "@soaltee-loyalty/theme/*": ["theme/*"],
      "@soaltee-loyalty/translations/*": ["translations/*"],
      "@soaltee-loyalty/interface/*": ["interface/*"],
      "@soaltee-loyalty/utility/*": ["utility/*"]
    },
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "types.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
